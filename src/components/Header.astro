---
const navItems = [
  {
    title: "Social",
    label: "Social",
    url: "#social"
  },
  {
    title: "Messaging",
    label: "Messaging",
    url: "#messaging"
  },
  {
    title: "Games/Educational",
    label: "Games/Educational",
    url: "#games/educational"
  },
  {
    title: "Projects",
    label: "Projects",
    url: "#projects"
  }
]
---

<header class="fixed top-0 z-10 flex items-center justify-y-center w-full mx-auto">
<nav class="flex gap-4 font-medium text-gray-200 w-full justify-center items-center text-sm border-gray-900 py-4">
    {
      navItems.map((link) => (
        <a 
          class="relative block transition hover:text-blue-600 p-1"
          aria-label={link.label}
          href={link.url}
          title={link.title}

        > 
          {link.title}
        </a>
      ))
    }
  </nav>
</header>

<style>
  nav {
    animation: blur linear both 0.5s;
    animation-timeline: scroll();
    animation-range: 0 200px;
  }

	@keyframes blur {
    to {
      backdrop-filter: blur(20px);
			background-color: #111011a3;
      border: 1px solid #000;
      padding: 1.2rem 0.75rem;
      display: flex;
      flex-direction: row;
      align-items: center;
    }
  }
</style>